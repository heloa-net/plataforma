<%- model_class = Product -%>
<div class="page-header">
  <h1>Mercadorias</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Código</th>
      <th>Tipo</th>
      <th>Nome</th>
      <th>Quantidade</th>
      <th>Preço</th>
      <th>Tipo da transação</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.product_type %></td>
        <td><%= product.name %></td>
        <td><%= product.amount %></td>
        <td><%= product.price %></td>
        <td><%= product.transaction_type %></td>
        <td>
          <%= link_to 'Mostrar',
                      product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Editar',
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Apagar',
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => 'Tem certeza que quer apagar?' },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo',
            new_product_path,
            :class => 'btn btn-primary' %>

<%= link_to 'Home',
            root_path,
            :class => 'btn btn-default' %>
