<%= form_for @product, validate: true, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Não foi possível salvar esta mercadoria.</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Código', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:code) %>
  </div>
  <div class="form-group">
    <%= f.label 'Tipo', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:product_type) %>
  </div>
  <div class="form-group">
    <%= f.label 'Nome', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label 'Quantidade', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>
  <div class="form-group">
    <%= f.label 'Preço', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:price) %>
  </div>
  <div class="form-group">
    <%= f.label 'Tipo da transação', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.radio_button(:transaction_type, "venda") %>
      <%= label_tag('venda', 'Venda') %>
      <%= f.radio_button(:transaction_type, "compra") %>
      <%= label_tag('compra', 'Compra') %>
    </div>
    <%=f.error_span(:transaction_type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to 'Cancelar',
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
